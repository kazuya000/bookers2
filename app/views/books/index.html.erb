<div class="container">
<div class="row">
<div class="col-xs-4">



<%= render 'list', user: current_user, book: @book %>

</div>

<div class="col-xs-8">
<h2>Books</h2>
<table class="table table-striped">
	<tr>
		<th></th>
		<th>title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
	  <td> <%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "img/no-image.jpg", :size => "60x60" %></td>
	  <td> <%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
		<td> <%= book.opinion %></td>
	</tr>
	<% end %>

</table>
</div>
</div>
</div>
