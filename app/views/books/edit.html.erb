<div class="container">
<h2>Editing Book</h2>
<!-- 聞く -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<% @book.errors.full_messages.each do |message| %>
	<%= message %>
<% end %>
<% end %>
	<p>title</p>
	<%= f.text_field :title, class: "book_title" %>
	<p>Opinion</p>
	<%= f.text_area :opinion, class: "book_body" %>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path, class: "book_#{@book.id}" %>
<span>|</span>
<%= link_to "Back", books_path, class: "back" %>
</div>